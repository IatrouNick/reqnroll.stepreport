<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <!-- IMPORTANT -->
    <TargetFramework>net8.0</TargetFramework>
    <PackAsTool>true</PackAsTool>
    <!-- Mark as dotnet CLI tool -->
    <ToolCommandName>stepreport</ToolCommandName>
    <!-- The CLI name -->
    <PackageId>reqnroll.stepreport</PackageId>
    <Version>1.0.0</Version>
    <Authors>Nikolas Iatrou</Authors>
    <Description>Generate a JSON report of Reqnroll step definitions from .cs files.</Description>
    <PackageOutputPath>./nupkg</PackageOutputPath>
  </PropertyGroup>

</Project>